<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.application.moveon.LoginActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="77dp"
        android:layout_height="84dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:adjustViewBounds="true"
        android:visibility="visible"
        android:background="@drawable/loader_planet1"
        android:scaleType="fitCenter" />

    <Button
        android:id="@+id/buttonConnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/editPassword"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:background="@drawable/button_big_connect_selector"
        android:textColor="#FFF"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editPassword"
        android:layout_width="245dp"
        android:layout_height="35dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/editLogin"
        android:background="@drawable/rounded_edit"
        android:hint="Mot de passe"
        android:layout_centerHorizontal="true"
        android:inputType="textPassword"
        android:padding="5dp"
        android:textColor="#000000"
        android:ellipsize="start"
        android:gravity="center_horizontal"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/editLogin"
        android:layout_width="245dp"
        android:layout_height="35dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="19dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/logo"
        android:background="@drawable/rounded_edit"
        android:padding="5dp"
        android:hint="Pseudo/Email"
        android:inputType="text"
        android:textColor="#000000"
        android:ellipsize="start"
        android:gravity="center_horizontal"
        android:textSize="14sp" >
    </EditText>

    <Button
        android:id="@+id/buttonRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:adjustViewBounds="true"
        android:background="@drawable/button_big_register_selector"
        android:textColor="#FFF"
        android:textStyle="bold" />

</RelativeLayout>
