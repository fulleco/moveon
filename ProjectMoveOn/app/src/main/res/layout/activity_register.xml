<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_inscription"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/inscription_background"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="19dp"
        android:adjustViewBounds="true"
        android:visibility="visible"
        android:background="@drawable/inscription_loader"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:id="@+id/linear_photo"
        android:layout_below="@+id/logo"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginBottom="18dp"
        android:layout_centerHorizontal="true">


        <ImageView
            android:id="@+id/imageProfil"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:paddingRight="5dp"
            android:background="@drawable/inscription_question_mark"
            android:layout_gravity="bottom"/>

        <Button
            android:id="@+id/buttonParcourir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@drawable/button_parcourir_selector"
            android:scaleType="centerInside"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>


    <EditText
        android:id="@+id/editFirstName"
        android:layout_below="@+id/linear_photo"
        android:layout_width="245dp"
        android:layout_centerHorizontal="true"
        android:layout_height="42dp"
        android:layout_marginBottom="25dp"
        android:padding="5dp"
        android:background="@drawable/rounded_edit"
        android:hint="PrÃ©nom"
        android:inputType="text"
        android:textColor="#000"
        android:ellipsize="start"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/editLastName"
        android:layout_width="245dp"
        android:layout_centerHorizontal="true"
        android:layout_height="42dp"
        android:layout_below="@+id/editFirstName"
        android:layout_marginBottom="25dp"
        android:padding="5dp"
        android:background="@drawable/rounded_edit"
        android:hint="Nom"
        android:inputType="text"
        android:textColor="#000"
        android:ellipsize="start"
        android:textSize="14sp" />

     <EditText
         android:id="@+id/editEmail"
         android:layout_width="245dp"
         android:layout_centerHorizontal="true"
         android:layout_height="42dp"
         android:layout_below="@+id/editLastName"
         android:layout_marginBottom="25dp"
         android:padding="5dp"
         android:background="@drawable/rounded_edit"
         android:hint="Email"
         android:inputType="text"
         android:textColor="#000"
         android:ellipsize="start"
         android:textSize="14sp" />

    <EditText
        android:id="@+id/editPassword1"
        android:layout_width="245dp"
        android:layout_height="42dp"
        android:layout_below="@+id/editEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:maxLength="12"
        android:padding="5dp"
        android:background="@drawable/rounded_edit"
        android:hint="Mot de passe"
        android:inputType="textPassword"
        android:textColor="#000"
        android:ellipsize="start"
        android:textSize="14sp" />

     <EditText
         android:id="@+id/editPassword2"
         android:layout_width="245dp"
         android:layout_height="42dp"
         android:layout_below="@+id/editPassword1"
         android:layout_alignLeft="@+id/editPassword1"
         android:layout_marginBottom="25dp"
         android:padding="5dp"
         android:background="@drawable/rounded_edit"
         android:hint="Confirmer le mot de passe"
         android:inputType="textPassword"
         android:textColor="#000"
         android:ellipsize="start"
         android:textSize="14sp" />

    <Button
        android:id="@+id/buttonRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:adjustViewBounds="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_inscription_selector"
        android:scaleType="centerInside"
        android:textColor="#FFF"
        android:textStyle="bold" />

</RelativeLayout>